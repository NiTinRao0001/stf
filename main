    <script>
        let stopwatchInterval, breakInterval;
        let elapsedTime = 0;
        let isRunning = false, isBreakRunning = false;
        let lastPauseTime = 0;
        let tasks = JSON.parse(localStorage.getItem('tasks')) || [];
        let sessions = JSON.parse(localStorage.getItem('sessions')) || [];
        let currentDate = new Date().toISOString().split('T')[0];
        let longPressTimer, currentContextTask = null;
        let showCompleted = false;
        let startTime = 0;

        const DEEPSEEK_API_KEY = "api key ";
        const DEEPSEEK_API_URL = "https://api.deepseek.com/v1/chat/completions";

        
        const stopwatchDisplay = document.getElementById('stopwatch-display');
        const toggleStopwatchBtn = document.getElementById('toggle-stopwatch');
        const resetBtn = document.getElementById('reset-stopwatch');
        const breakIndicator = document.getElementById('break-indicator');
        const todayWorkDisplay = document.getElementById('today-work-stat');
        const todayBreakDisplay = document.getElementById('today-break-stat');
        const productivityRatioDisplay = document.getElementById('productivity-ratio-stat');
        const currentStreakDisplay = document.getElementById('current-streak-stat');
        const aiInsightText = document.getElementById('ai-insight-text');
        const aiStudyInsight = document.getElementById('ai-study-insight');
        const aiPerformanceText = document.getElementById('ai-performance-text');
        const todoList = document.getElementById('todo-list');
        const newTodoInput = document.getElementById('new-todo');
        const addTodoBtn = document.getElementById('add-todo');
        const prioritySelect = document.getElementById('todo-priority');
        const toggleCompletedBtn = document.getElementById('toggle-completed');
        const navItems = document.querySelectorAll('.nav-item');
        const sections = document.querySelectorAll('.section');
        const contextMenu = document.getElementById('context-menu');
        
        const settingsElements = {
            autoBreak: document.getElementById('auto-break'),
            workAlert: document.getElementById('work-alert'),
            maxBreak: document.getElementById('max-break'),
            aiRepetition: document.getElementById('ai-repetition'),
            defaultPriority: document.getElementById('default-priority'),
            revisionStyle: document.getElementById('revision-style'),
            accentColor: document.getElementById('accent-color'),
            animationSpeed: document.getElementById('animation-speed'),
            exportData: document.getElementById('export-data'),
            importData: document.getElementById('import-data'),
            resetData: document.getElementById('reset-data')
        };

        function init() {
            loadSettings();
            loadTasks();
            loadSessions();
            updateStopwatchDisplays();
            renderTodoList();
            setupEventListeners();
            updateAIInsights();
            
            
            const savedElapsed = localStorage.getItem('elapsedTime');
            if (savedElapsed) {
                elapsedTime = parseInt(savedElapsed);
                updateStopwatchDisplay();
            }
        }

        function loadSettings() {
            const settings = JSON.parse(localStorage.getItem('settings')) || {};
            if (settings.autoBreak !== undefined) settingsElements.autoBreak.checked = settings.autoBreak;
            if (settings.workAlert) settingsElements.workAlert.value = settings.workAlert;
            if (settings.maxBreak) settingsElements.maxBreak.value = settings.maxBreak;
            if (settings.aiRepetition !== undefined) settingsElements.aiRepetition.checked = settings.aiRepetition;
            if (settings.defaultPriority) settingsElements.defaultPriority.value = settings.defaultPriority;
            if (settings.revisionStyle) settingsElements.revisionStyle.value = settings.revisionStyle;
            if (settings.accentColor) {
                settingsElements.accentColor.value = settings.accentColor;
                document.documentElement.style.setProperty('--accent', settings.accentColor);
                document.documentElement.style.setProperty('--accent-hover', lightenColor(settings.accentColor, 20));
            }
            if (settings.animationSpeed) settingsElements.animationSpeed.value = settings.animationSpeed;
        }

        function saveSettings() {
            const settings = {
                autoBreak: settingsElements.autoBreak.checked,
                workAlert: settingsElements.workAlert.value,
                maxBreak: settingsElements.maxBreak.value,
                aiRepetition: settingsElements.aiRepetition.checked,
                defaultPriority: settingsElements.defaultPriority.value,
                revisionStyle: settingsElements.revisionStyle.value,
                accentColor: settingsElements.accentColor.value,
                animationSpeed: settingsElements.animationSpeed.value
            };
            localStorage.setItem('settings', JSON.stringify(settings));
            document.documentElement.style.setProperty('--accent', settings.accentColor);
            document.documentElement.style.setProperty('--accent-hover', lightenColor(settings.accentColor, 20));
        }

        function loadTasks() {
            const savedTasks = localStorage.getItem('tasks');
            if (savedTasks) tasks = JSON.parse(savedTasks);
        }

        function saveTasks() {
            localStorage.setItem('tasks', JSON.stringify(tasks));
        }

        function loadSessions() {
            const savedSessions = localStorage.getItem('sessions');
            if (savedSessions) sessions = JSON.parse(savedSessions);
        }

        function saveSessions() {
            localStorage.setItem('sessions', JSON.stringify(sessions));
        }

        function setupEventListeners() {
            toggleStopwatchBtn.addEventListener('click', toggleStopwatch);
            resetBtn.addEventListener('click', resetStopwatch);
            addTodoBtn.addEventListener('click', addNewTask);
            newTodoInput.addEventListener('keypress', (e) => { if (e.key === 'Enter') addNewTask(); });
            toggleCompletedBtn.addEventListener('click', toggleCompletedTasks);
            
            navItems.forEach(item => {
                item.addEventListener('click', () => showSection(item.getAttribute('data-section')));
                item.addEventListener('keypress', (e) => { 
                    if (e.key === 'Enter') showSection(item.getAttribute('data-section')); 
                });
            });
            
            document.addEventListener('click', () => contextMenu.style.display = 'none');
            
            contextMenu.querySelectorAll('.context-menu-item').forEach(item => {
                item.addEventListener('click', handleContextMenuAction);
            });
            
            
            settingsElements.autoBreak.addEventListener('change', saveSettings);
            settingsElements.workAlert.addEventListener('change', saveSettings);
            settingsElements.maxBreak.addEventListener('change', saveSettings);
            settingsElements.aiRepetition.addEventListener('change', saveSettings);
            settingsElements.defaultPriority.addEventListener('change', saveSettings);
            settingsElements.revisionStyle.addEventListener('change', saveSettings);
            settingsElements.accentColor.addEventListener('change', saveSettings);
            settingsElements.animationSpeed.addEventListener('change', saveSettings);
            
            settingsElements.exportData.addEventListener('click', exportData);
            settingsElements.importData.addEventListener('click', importData);
            settingsElements.resetData.addEventListener('click', resetData);
        }

        function showSection(sectionId) {
            
            navItems.forEach(item => {
                item.classList.toggle('active', item.getAttribute('data-section') === sectionId);
            });
            
           
            sections.forEach(section => {
                section.classList.toggle('active', section.id === sectionId);
            });
            
            if (sectionId === 'stats') {
                updateCharts();
            }
        }

        function toggleStopwatch() {
            if (!isRunning) {
                
                if (isBreakRunning) {
                    const breakDuration = Math.floor((Date.now() - lastPauseTime) / 1000);
                    clearInterval(breakInterval);
                    isBreakRunning = false;
                    breakIndicator.style.display = 'none';
                    saveSession('break', breakDuration);
                }
                
                isRunning = true;
                toggleStopwatchBtn.textContent = 'Pause';
                toggleStopwatchBtn.classList.remove('btn-primary');
                toggleStopwatchBtn.classList.add('btn-secondary');
                
                startTime = Date.now() - (elapsedTime * 1000);
                
                stopwatchInterval = setInterval(() => {
                    elapsedTime = Math.floor((Date.now() - startTime) / 1000);
                    localStorage.setItem('elapsedTime', elapsedTime.toString());
                    updateStopwatchDisplay();
                }, 1000);
            } else {
                
                clearInterval(stopwatchInterval);
                isRunning = false;
                toggleStopwatchBtn.textContent = 'Start';
                toggleStopwatchBtn.classList.remove('btn-secondary');
                toggleStopwatchBtn.classList.add('btn-primary');
                
                saveSession('work', elapsedTime);
                
                if (settingsElements.autoBreak.checked) {
                    isBreakRunning = true;
                    lastPauseTime = Date.now();
                    
                    breakInterval = setInterval(() => {
                        const breakDuration = Math.floor((Date.now() - lastPauseTime) / 1000);
                        breakIndicator.textContent = `Break: ${formatTime(breakDuration)}`;
                        breakIndicator.style.display = 'block';
                        
                        const maxBreak = parseInt(settingsElements.maxBreak.value) * 60;
                        if (breakDuration >= maxBreak) {
                            clearInterval(breakInterval);
                            isBreakRunning = false;
                            breakIndicator.textContent = 'Break time limit reached!';
                            setTimeout(() => breakIndicator.style.display = 'none', 3000);
                        }
                    }, 1000);
                }
            }
        }

        function resetStopwatch() {
            clearInterval(stopwatchInterval);
            clearInterval(breakInterval);
            isRunning = false;
            isBreakRunning = false;
            elapsedTime = 0;
            localStorage.removeItem('elapsedTime');
            toggleStopwatchBtn.textContent = 'Start';
            toggleStopwatchBtn.classList.remove('btn-secondary');
            toggleStopwatchBtn.classList.add('btn-primary');
            breakIndicator.style.display = 'none';
            updateStopwatchDisplay();
        }

        function updateStopwatchDisplay() {
            stopwatchDisplay.textContent = formatTime(elapsedTime);
        }

        function updateStopwatchDisplays() {
            const todaySessions = sessions.filter(session => session.date === currentDate);
            let todayWork = 0, todayBreak = 0;
            
            todaySessions.forEach(session => {
                if (session.type === 'work') todayWork += session.duration;
                if (session.type === 'break') todayBreak += session.duration;
            });
            
            todayWorkDisplay.textContent = formatTime(todayWork);
            todayBreakDisplay.textContent = formatTime(todayBreak);
            
            const ratio = todayBreak > 0 ? (todayWork / todayBreak).toFixed(2) : todayWork > 0 ? '‚àû' : '0.00';
            productivityRatioDisplay.textContent = ratio;
            
            
            const dates = [...new Set(sessions.map(s => s.date))].sort();
            let streak = 0;
            let currentDateObj = new Date();
            
            while (true) {
                const dateStr = currentDateObj.toISOString().split('T')[0];
                if (dates.includes(dateStr)) {
                    streak++;
                    currentDateObj.setDate(currentDateObj.getDate() - 1);
                } else {
                    break;
                }
            }
            
            currentStreakDisplay.textContent = `${streak} day${streak !== 1 ? 's' : ''}`;
        }

        function saveSession(type, duration) {
            if (duration < 1) return;
            
            const session = {
                date: currentDate,
                type,
                duration,
                timestamp: Date.now()
            };
            
            sessions.push(session);
            saveSessions();
            updateStopwatchDisplays();
            updateAIInsights();
        }

        function addNewTask() {
            const title = newTodoInput.value.trim();
            if (!title) return;
            
            const priority = prioritySelect.value;
            const newTask = {
                id: Date.now(),
                title,
                description: '',
                priority,
                completed: false,
                createdAt: Date.now(),
                completedAt: null,
                isRevision: false,
                revisionCount: 0,
                nextRevision: null
            };
            
            tasks.push(newTask);
            saveTasks();
            renderTodoList();
            newTodoInput.value = '';
            newTodoInput.focus();
        }

        function renderTodoList() {
            todoList.innerHTML = '';
            const filteredTasks = showCompleted ? tasks : tasks.filter(task => !task.completed);
            
            if (filteredTasks.length === 0) {
                const emptyMsg = document.createElement('li');
                emptyMsg.textContent = showCompleted ? 'No completed tasks yet' : 'No tasks yet. Add one above!';
                emptyMsg.style.textAlign = 'center';
                emptyMsg.style.padding = '20px';
                emptyMsg.style.color = 'var(--text-secondary)';
                todoList.appendChild(emptyMsg);
                return;
            }
            
            if (showCompleted) {
                const incompleteTasks = filteredTasks.filter(task => !task.completed);
                const completedTasks = filteredTasks.filter(task => task.completed);
                
                renderTaskList(incompleteTasks);
                
                if (completedTasks.length > 0 && incompleteTasks.length > 0) {
                    const separator = document.createElement('div');
                    separator.className = 'completed-separator';
                    separator.textContent = 'Completed Tasks';
                    todoList.appendChild(separator);
                }
                
                renderTaskList(completedTasks);
            } else {
                renderTaskList(filteredTasks);
            }
        }

        function renderTaskList(tasksToRender) {
            tasksToRender.sort((a, b) => {
                const priorityOrder = { high: 3, medium: 2, low: 1 };
                return priorityOrder[b.priority] - priorityOrder[a.priority] || b.createdAt - a.createdAt;
            });
            
            tasksToRender.forEach(task => {
                const taskElement = document.createElement('li');
                taskElement.className = 'todo-item';
                taskElement.dataset.id = task.id;
                
                if (task.completed) taskElement.classList.add('completed');
                if (task.isRevision) {
                    taskElement.classList.add('revision-task');
                    if (task.revisionCount >= 4) taskElement.classList.add('long-term-revision');
                }
                
                
                const checkbox = document.createElement('input');
                checkbox.type = 'checkbox';
                checkbox.className = 'todo-checkbox';
                checkbox.checked = task.completed;
                checkbox.addEventListener('change', () => toggleTaskComplete(task.id));
                
                
                const contentDiv = document.createElement('div');
                contentDiv.className = 'todo-content';
                
               
                const titleDiv = document.createElement('div');
                titleDiv.className = 'todo-title';
                
                
                const prioritySpan = document.createElement('span');
                prioritySpan.className = `todo-priority priority-${task.priority}`;
                
                const titleText = document.createTextNode(task.title);
                titleDiv.appendChild(prioritySpan);
                titleDiv.appendChild(titleText);
                
                if (task.isRevision) {
                    const aiTag = document.createElement('span');
                    aiTag.className = 'ai-tag';
                    aiTag.textContent = `Revision ${task.revisionCount + 1}`;
                    titleDiv.appendChild(aiTag);
                }
                
                
                const descDiv = document.createElement('div');
                descDiv.className = 'todo-description';
                descDiv.textContent = task.description || '';
                
                contentDiv.appendChild(titleDiv);
                contentDiv.appendChild(descDiv);
                
                
                const actionsDiv = document.createElement('div');
                actionsDiv.className = 'todo-actions';
                
                const editBtn = document.createElement('button');
                editBtn.className = 'todo-btn';
                editBtn.innerHTML = '‚úèÔ∏è';
                editBtn.setAttribute('aria-label', 'Edit task');
                editBtn.addEventListener('click', () => editTask(task.id));
                
                const deleteBtn = document.createElement('button');
                deleteBtn.className = 'todo-btn';
                deleteBtn.innerHTML = 'üóëÔ∏è';
                deleteBtn.setAttribute('aria-label', 'Delete task');
                deleteBtn.addEventListener('click', () => deleteTask(task.id));
                
                actionsDiv.appendChild(editBtn);
                actionsDiv.appendChild(deleteBtn);
                
                
                taskElement.addEventListener('touchstart', (e) => {
                    longPressTimer = setTimeout(() => showContextMenu(e, task.id), 800);
                    e.preventDefault();
                });
                
                taskElement.addEventListener('touchend', () => clearTimeout(longPressTimer));
                taskElement.addEventListener('touchmove', () => clearTimeout(longPressTimer));
                taskElement.addEventListener('touchcancel', () => clearTimeout(longPressTimer));
                
                taskElement.addEventListener('mousedown', (e) => {
                    if (e.button === 0) longPressTimer = setTimeout(() => showContextMenu(e, task.id), 800);
                });
                
                taskElement.addEventListener('mouseup', () => clearTimeout(longPressTimer));
                taskElement.addEventListener('mouseleave', () => clearTimeout(longPressTimer));
                
                
                taskElement.appendChild(checkbox);
                taskElement.appendChild(contentDiv);
                taskElement.appendChild(actionsDiv);
                
                todoList.appendChild(taskElement);
            });
        }

        function showContextMenu(e, taskId) {
            e.preventDefault();
            currentContextTask = taskId;
            contextMenu.style.display = 'block';
            contextMenu.style.left = `${e.clientX}px`;
            contextMenu.style.top = `${e.clientY}px`;
        }

        function handleContextMenuAction(e) {
            const action = e.target.getAttribute('data-action');
            const taskId = currentContextTask;
            
            switch (action) {
                case 'edit':
                    editTask(taskId);
                    break;
                case 'priority':
                    changeTaskPriority(taskId);
                    break;
                case 'duplicate':
                    duplicateTask(taskId);
                    break;
                case 'delete':
                    deleteTask(taskId);
                    break;
            }
            
            contextMenu.style.display = 'none';
        }

        function toggleTaskComplete(taskId) {
            const taskIndex = tasks.findIndex(t => t.id === taskId);
            if (taskIndex === -1) return;
            
            const task = tasks[taskIndex];
            task.completed = !task.completed;
            task.completedAt = task.completed ? Date.now() : null;
            
            if (task.completed && settingsElements.aiRepetition.checked) {
                if (task.isRevision) {
                    task.revisionCount++;
                    const nextRevisionDays = calculateNextRevision(task.revisionCount);
                    
                    if (nextRevisionDays) {
                        const nextRevisionDate = new Date();
                        nextRevisionDate.setDate(nextRevisionDate.getDate() + nextRevisionDays);
                        task.nextRevision = nextRevisionDate.getTime();
                    } else {
                        task.isRevision = false;
                        task.nextRevision = null;
                    }
                } else {
                    const firstRevisionDate = new Date();
                    firstRevisionDate.setDate(firstRevisionDate.getDate() + 3);
                    
                    const revisionTask = {
                        ...task,
                        id: Date.now(),
                        completed: false,
                        completedAt: null,
                        isRevision: true,
                        revisionCount: 0,
                        nextRevision: firstRevisionDate.getTime()
                    };
                    
                    tasks.push(revisionTask);
                }
            }
            
            saveTasks();
            renderTodoList();
            updateAIInsights();
            
            if (task.completed) {
                analyzeTaskCompletionWithAI(task);
            }
        }

        function calculateNextRevision(revisionCount) {
            const intervals = [3, 7, 15, 30, 60, 90];
            return revisionCount < intervals.length ? intervals[revisionCount] : 90;
        }

        function editTask(taskId) {
            const task = tasks.find(t => t.id === taskId);
            if (!task) return;
            
            const newTitle = prompt('Edit task title:', task.title);
            if (newTitle !== null) {
                task.title = newTitle.trim();
                const newDescription = prompt('Edit task description:', task.description);
                if (newDescription !== null) task.description = newDescription.trim();
                saveTasks();
                renderTodoList();
            }
        }

        function changeTaskPriority(taskId) {
            const task = tasks.find(t => t.id === taskId);
            if (!task) return;
            
            const newPriority = prompt('Change task priority (high, medium, low):', task.priority);
            if (newPriority && ['high', 'medium', 'low'].includes(newPriority.toLowerCase())) {
                task.priority = newPriority.toLowerCase();
                saveTasks();
                renderTodoList();
            }
        }

        function duplicateTask(taskId) {
            const task = tasks.find(t => t.id === taskId);
            if (!task) return;
            
            const newTask = {
                ...task,
                id: Date.now(),
                completed: false,
                completedAt: null,
                createdAt: Date.now(),
                isRevision: false,
                revisionCount: 0,
                nextRevision: null
            };
            
            tasks.push(newTask);
            saveTasks();
            renderTodoList();
        }

        function deleteTask(taskId) {
            if (confirm('Are you sure you want to delete this task?')) {
                tasks = tasks.filter(t => t.id !== taskId);
                saveTasks();
                renderTodoList();
            }
        }

        function toggleCompletedTasks() {
            showCompleted = !showCompleted;
            toggleCompletedBtn.textContent = showCompleted ? 'Hide Completed' : 'Show Completed';
            renderTodoList();
        }

        function exportData() {
            const data = {
                tasks,
                sessions,
                settings: JSON.parse(localStorage.getItem('settings')) || {},
                exportedAt: Date.now()
            };
            
            const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `productivity-pro-data-${new Date().toISOString().split('T')[0]}.json`;
            a.click();
            URL.revokeObjectURL(url);
        }

        function importData() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = '.json';
            
            input.addEventListener('change', (e) => {
                const file = e.target.files[0];
                if (!file) return;
                
                const reader = new FileReader();
                reader.onload = (event) => {
                    try {
                        const data = JSON.parse(event.target.result);
                        
                        if (confirm('This will overwrite your current data. Continue?')) {
                            if (data.tasks) {
                                tasks = data.tasks;
                                localStorage.setItem('tasks', JSON.stringify(tasks));
                            }
                            
                            if (data.sessions) {
                                sessions = data.sessions;
                                localStorage.setItem('sessions', JSON.stringify(sessions));
                            }
                            
                            if (data.settings) {
                                localStorage.setItem('settings', JSON.stringify(data.settings));
                                loadSettings();
                            }
                            
                            renderTodoList();
                            updateStopwatchDisplays();
                            updateAIInsights();
                            alert('Data imported successfully!');
                        }
                    } catch (err) {
                        alert('Error importing data: ' + err.message);
                    }
                };
                
                reader.readAsText(file);
            });
            
            input.click();
        }

        function resetData() {
            if (confirm('Are you sure you want to reset ALL data? This cannot be undone.')) {
                tasks = [];
                sessions = [];
                localStorage.removeItem('tasks');
                localStorage.removeItem('sessions');
                localStorage.removeItem('settings');
                localStorage.removeItem('elapsedTime');
                resetStopwatch();
                renderTodoList();
                updateStopwatchDisplays();
                updateAIInsights();
                alert('All data has been reset.');
            }
        }

        async function callDeepSeekAI(prompt) {
            try {
                const response = await fetch(DEEPSEEK_API_URL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${DEEPSEEK_API_KEY}`
                    },
                    body: JSON.stringify({
                        model: "deepseek-chat",
                        messages: [
                            { 
                                role: "system", 
                                content: "You are a helpful productivity coach that provides study suggestions in Hinglish (mix of Hindi and English). Keep responses short (1-2 sentences), casual, and motivational. Use emojis where appropriate." 
                            },
                            { 
                                role: "user", 
                                content: prompt 
                            }
                        ],
                        temperature: 0.7,
                        max_tokens: 100
                    })
                });
                
                if (!response.ok) {
                    throw new Error(`API request failed with status ${response.status}`);
                }
                
                const data = await response.json();
                return data.choices[0].message.content;
            } catch (error) {
                console.error("Error calling DeepSeek API:", error);
                return "Oops! AI suggestion nahi aa paya. Thodi der baad try karo! üòÖ";
            }
        }

        async function analyzeTaskCompletionWithAI(task) {
            const prompt = `User just completed this task: "${task.title}". They've been working for ${formatTime(getTodayWorkTime())} today. Their productivity ratio is ${productivityRatioDisplay.textContent}. Give them a motivational Hinglish suggestion about what to do next.`;
            const suggestion = await callDeepSeekAI(prompt);
            aiStudyInsight.innerHTML = suggestion;
        }

        async function updateAIInsights() {
            try {
                if (sessions.length > 0) {
                    const workSessions = sessions.filter(s => s.type === 'work');
                    const breakSessions = sessions.filter(s => s.type === 'break');
                    
                    const totalWork = workSessions.reduce((sum, session) => sum + session.duration, 0);
                    const totalBreak = breakSessions.reduce((sum, session) => sum + session.duration, 0);
                    
                    const avgWorkDuration = totalWork / workSessions.length;
                    const avgBreakDuration = totalBreak / (breakSessions.length || 1);
                    
                    const stopwatchPrompt = `User has worked for ${formatTime(totalWork)} total (avg ${Math.floor(avgWorkDuration / 60)} min sessions) and taken ${formatTime(totalBreak)} total breaks (avg ${Math.floor(avgBreakDuration / 60)} min). Their productivity ratio is ${totalBreak > 0 ? (totalWork / totalBreak).toFixed(2) : '‚àû'}. Give them a Hinglish suggestion to improve their productivity.`;
                    aiInsightText.innerHTML = await callDeepSeekAI(stopwatchPrompt);
                    
                    const statsPrompt = `User has ${tasks.filter(t => !t.completed).length} pending tasks and ${tasks.filter(t => t.completed).length} completed tasks. Give them a Hinglish suggestion about their overall productivity.`;
                    aiPerformanceText.innerHTML = await callDeepSeekAI(statsPrompt);
                }
                
                if (tasks.length > 0) {
                    const completedTasks = tasks.filter(t => t.completed);
                    const revisionTasks = tasks.filter(t => t.isRevision);
                    const pendingRevision = tasks.filter(t => t.isRevision && !t.completed);
                    
                    const todoPrompt = `User has ${tasks.length} total tasks (${completedTasks.length} completed, ${pendingRevision.length} pending revisions). Give them a Hinglish suggestion about their task management.`;
                    aiStudyInsight.innerHTML = await callDeepSeekAI(todoPrompt);
                }
            } catch (error) {
                console.error("Error updating AI insights:", error);
                aiInsightText.innerHTML = "Analyzing your work patterns...";
                aiStudyInsight.innerHTML = "Complete your first task to receive AI-powered suggestions.";
                aiPerformanceText.innerHTML = "Collecting data for analysis...";
            }
        }

        function getTodayWorkTime() {
            return sessions.filter(s => s.date === currentDate && s.type === 'work').reduce((sum, s) => sum + s.duration, 0);
        }

        function updateCharts() {
            const todaySessions = sessions.filter(s => s.date === currentDate && s.type === 'work');
            
            
            const morning = todaySessions.filter(s => new Date(s.timestamp).getHours() < 12).reduce((sum, s) => sum + s.duration, 0) / 60;
            const afternoon = todaySessions.filter(s => new Date(s.timestamp).getHours() >= 12 && new Date(s.timestamp).getHours() < 17).reduce((sum, s) => sum + s.duration, 0) / 60;
            const evening = todaySessions.filter(s => new Date(s.timestamp).getHours() >= 17 && new Date(s.timestamp).getHours() < 21).reduce((sum, s) => sum + s.duration, 0) / 60;
            const night = todaySessions.filter(s => new Date(s.timestamp).getHours() >= 21).reduce((sum, s) => sum + s.duration, 0) / 60;
            
            new Chart(document.getElementById('work-time-chart').getContext('2d'), {
                type: 'doughnut',
                data: {
                    labels: ['Morning', 'Afternoon', 'Evening', 'Night'],
                    datasets: [{
                        data: [morning, afternoon, evening, night],
                        backgroundColor: [
                            'rgba(124, 77, 255, 0.7)',
                            'rgba(54, 162, 235, 0.7)',
                            'rgba(255, 206, 86, 0.7)',
                            'rgba(75, 192, 192, 0.7)'
                        ]
                    }]
                },
                options: { responsive: true }
            });
            
            
            const breakSessions = sessions.filter(s => s.type === 'break').slice(-7);
            
            new Chart(document.getElementById('break-time-chart').getContext('2d'), {
                type: 'line',
                data: {
                    labels: breakSessions.map((_, i) => `Day ${i + 1}`),
                    datasets: [{
                        label: 'Break Duration (min)',
                        data: breakSessions.map(s => s.duration / 60),
                        borderColor: 'rgba(255, 99, 132, 1)',
                        backgroundColor: 'rgba(255, 99, 132, 0.1)',
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    scales: { y: { beginAtZero: true } }
                }
            });
            
           
            const last7Days = Array(7).fill().map((_, i) => {
                const d = new Date();
                d.setDate(d.getDate() - i);
                return d.toISOString().split('T')[0];
            }).reverse();
            
            const completed = last7Days.map(d => tasks.filter(t => t.completedAt && new Date(t.completedAt).toISOString().split('T')[0] === d).length);
            const added = last7Days.map(d => tasks.filter(t => new Date(t.createdAt).toISOString().split('T')[0] === d).length);
            
            new Chart(document.getElementById('completion-chart').getContext('2d'), {
                type: 'radar',
                data: {
                    labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                    datasets: [
                        {
                            label: 'Tasks Completed',
                            data: completed,
                            backgroundColor: 'rgba(124, 77, 255, 0.2)',
                            borderColor: 'rgba(124, 77, 255, 1)',
                            pointBackgroundColor: 'rgba(124, 77, 255, 1)'
                        },
                        {
                            label: 'Tasks Added',
                            data: added,
                            backgroundColor: 'rgba(54, 162, 235, 0.2)',
                            borderColor: 'rgba(54, 162, 235, 1)',
                            pointBackgroundColor: 'rgba(54, 162, 235, 1)'
                        }
                    ]
                },
                options: { responsive: true }
            });
            
            
            const last30Days = Array(30).fill().map((_, i) => {
                const d = new Date();
                d.setDate(d.getDate() - i);
                return d.toISOString().split('T')[0];
            }).reverse();
            
            const ratios = last30Days.map(d => {
                const work = sessions.filter(s => s.date === d && s.type === 'work').reduce((sum, s) => sum + s.duration, 0);
                const breaks = sessions.filter(s => s.date === d && s.type === 'break').reduce((sum, s) => sum + s.duration, 0);
                return breaks > 0 ? work / breaks : work > 0 ? 10 : 0;
            });
            
            const completions = last30Days.map(d => tasks.filter(t => t.completedAt && new Date(t.completedAt).toISOString().split('T')[0] === d).length);
            
            new Chart(document.getElementById('trends-chart').getContext('2d'), {
                type: 'line',
                data: {
                    labels: last30Days.map(d => new Date(d).getDate()),
                    datasets: [
                        {
                            label: 'Productivity Ratio',
                            data: ratios,
                            borderColor: 'rgba(124, 77, 255, 1)',
                            backgroundColor: 'rgba(124, 77, 255, 0.1)',
                            yAxisID: 'y'
                        },
                        {
                            label: 'Tasks Completed',
                            data: completions,
                            borderColor: 'rgba(75, 192, 192, 1)',
                            backgroundColor: 'rgba(75, 192, 192, 0.1)',
                            yAxisID: 'y1'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: { position: 'left' },
                        y1: { position: 'right', grid: { drawOnChartArea: false } }
                    }
                }
            });
        }

        function formatTime(seconds) {
            const hrs = Math.floor(seconds / 3600);
            const mins = Math.floor((seconds % 3600) / 60);
            const secs = seconds % 60;
            return `${hrs.toString().padStart(2, '0')}:${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
        }

        function lightenColor(color, percent) {
            const num = parseInt(color.replace('#', ''), 16);
            const amt = Math.round(2.55 * percent);
            const R = Math.min(255, Math.max(0, (num >> 16) + amt));
            const G = Math.min(255, Math.max(0, (num >> 8 & 0x00FF) + amt));
            const B = Math.min(255, Math.max(0, (num & 0x0000FF) + amt));
            return `#${(0x1000000 + R * 0x10000 + G * 0x100 + B).toString(16).slice(1)}`;
        }

        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
